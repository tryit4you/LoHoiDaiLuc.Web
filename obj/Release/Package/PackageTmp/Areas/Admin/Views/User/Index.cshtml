
@{
    ViewBag.Title = "Quản lý taì khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/Admin/dist/js/controller/userController.js"></script>
}
<div class="row">
    <div class="col-md-2">
        <div class="form-group">
            <a href="/Admin/Account/Register" class="btn btn-success" id="btnAddNew"><i class="fa fa-plus"> </i>Tạo tài khoản</a>
        </div>
    </div>
</div>
<div class="row">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>

                <th>Tên tài khoản </th>
                <th>Email</th>
                <th>Hình đại diện</th>
            </tr>
        </thead>
        <tbody id="tbData"></tbody>
    </table>
    <div class="row">
        <div class="col-md-6">
            <div class="pagination" id="pagination">
            </div>
        </div>
        <div class="col-md-6 text-center">
            <p>Trang <mark><span id="currentpage"></span></mark> tổng số <mark><span id="totalpage"></span></mark> trang</p>
        </div>

    </div>

</div>

<script id="data-template" type="x-tmpl-mustache">
    <tr>
        <td>{{UserName}}</td>
        <td>{{Email}}</td>
        <td><img width="100" src="{{Avatar}}" alt="" /></td>

       
    </tr>
</script>



<!--modal viewdetail-->
<!--modal create popup-->

<div class="modal fade" id="modalAddUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <span id="modal-title">Thêm mới tài khoản</span>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </h5>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="Name">Mã quyền</label>
                        <input type="text" class="form-control" name="ID" id="txtId">
                        <span class="validate"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Tên</label>
                        <input type="text" class="form-control" name="Name" id="txtName">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary btn-addRole" >Thêm quyền</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalUpdateRoles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    <span id="modal-title">Chỉnh sửa quyền</span>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </h5>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="Name">Mã quyền</label>
                        <input type="text" class="form-control" name="ID" id="editID">
                        <span class="validate"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Tên</label>
                        <input type="text" class="form-control" name="Name" id="editName">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary btn-updateRole">Chỉnh sửa</button>
            </div>
        </div>
    </div>
</div>