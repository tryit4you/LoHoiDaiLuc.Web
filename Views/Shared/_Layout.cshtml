<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Assets/Clients/Images/logo.PNG" style="width:100%" rel="icon" type="image/png" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/Assets/Clients/font-awesome-4.7.0/css/font-awesome.css" rel="stylesheet" />
    @Styles.Render("~/css/lohoidailuc")
    <title>Lò hơi Đại Lực - @ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.MetaKeyword" />
    <meta name="description" content="@ViewBag.MetaDescription" />
</head>
<body>
    <div class="header">
        <div class="container">
            @{Html.RenderAction("_header_Contact", "Partial");}
            <hr />
            <div class="header-top">
                <div class="pull-left">
                    <div class="logo">
                        <a href="/" class="img-responsive"><img src="~/Assets/Clients/images/bannerB9.png" alt="logo"></a>
                    </div>
                </div>
                <div class="col-md-4 pull-right search">

                    <form role="form" method="get" action="/tim-kiem">
                        <div class="input-group">


                            <input type="text" class="form-control" id="search_param" name="keyword" placeholder="Tìm kiếm...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit"><span class="fa fa-search"></span></button>
                            </span>
                        </div>
                    </form>

                </div>

                <div class="clearfix"></div>
            </div>
            <div class="header-navbar">
                @{ Html.RenderAction("_navigation", "Partial");}

            </div>


            @{ Html.RenderAction("_slide", "Partial");}



            <div class="clearfix"></div>
        </div>
        <!-- End WOWSlider.com BODY section -->
    </div>
    <div class="wrapper">
        <div class="container">
            <div class="content">
                <div class="row">
                    <div class="col-md-8">
                        @RenderBody()
                    </div>
                    <div class="col-md-4">
                        <div class="content-right">
                            @RenderSection("content_right", required: false)
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>

        </div>
    </div>
    <div class="scroll-top-wrapper ">
        <span class="scroll-top-inner">
            <i class="fa fa-chevron-circle-up"></i>
        </span>
    </div>
    <footer class="footer">
        @{ Html.RenderAction("_footer", "Partial");}
        <div class="copyright">
            <div class="text-center">&copy; Bản quyền thuộc về lò hơi đại lực 2018</div>
        </div>
    </footer>

    @Scripts.Render("~/js/jquery")
    @Scripts.Render("~/js/lohoidailuc")
    <div id="fb-root"></div>
    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = 'https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v2.12&appId=2429901250567613&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>

    <!--Start of Tawk.to Script-->
    <script type="text/javascript">
        var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
        (function () {
            var s1 = document.createElement("script"), s0 = document.getElementsByTagName("script")[0];
            s1.async = true;
            s1.src = 'https://embed.tawk.to/5a961582d7591465c70815a3/default';
            s1.charset = 'UTF-8';
            s1.setAttribute('crossorigin', '*');
            s0.parentNode.insertBefore(s1, s0);
        })();
    </script>
    <!--End of Tawk.to Script-->

</body>
</html>
