@model LoHoiDaiLuc.Models.Models.Product

@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="~/Assets/Admin/dist/js/controller/productController.js"></script>
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImages').val(url);
                $("#txtImg").attr('src', url);
            };
            finder.popup();
        });
        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Assets/Admin/dist/js/plugins/ckeditor/config.js'
        });
        $(document).ready(function () {
            $('#checkStatus').prop('checked', true);
        });
        var hotdate = $('.btn-success').val();
    </script>
}
<h2>Thêm mới sản phẩm</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Alias, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(model => model.Alias, new { @class = "form-control", @id = "txtSeoTitle" })
            @Html.ValidationMessageFor(model => model.Alias, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryID, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.CategoryID, new SelectList(ViewBag.ProductCategoryName, "ID", "cateName", 0), "-Select Item-", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="col-md-offset-2 Avartar">
        <img id="txtImg" />
    </div>

    <div class="form-group">
        <div class="col-md-6 col-md-offset-2">
            @Html.HiddenFor(model => model.Image, new { @class = "form-control", @id = "txtImages" })
            <a href="#" class="btn btn-default" id="btnSelectImage">Chọn ảnh</a>
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @id = "txtContent" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @id = "txtDescription" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MetaKeyword, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.MetaKeyword, new { @class = "form-control", @id = "txtDescription", @rows = "5" })
            @Html.ValidationMessageFor(model => model.MetaKeyword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MetaDescription, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.MetaDescription, new { @class = "form-control", @id = "txtDescription", @rows = "5" })
            @Html.ValidationMessageFor(model => model.MetaDescription, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tags, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Tags, new { @class = "form-control", @id = "txtTags" })
            @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.CheckBoxFor(model => model.Status, new { @id = "checkStatus" })
            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HomeFlag, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.CheckBoxFor(model => model.HomeFlag, new { @id = "checkStatus" })
            @Html.ValidationMessageFor(model => model.HomeFlag, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HotFlag, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.CheckBoxFor(model => model.HotFlag, new { @id = "checkStatus" })
            @Html.ValidationMessageFor(model => model.HotFlag, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm sản phẩm" class="btn btn-success" />
        </div>
    </div>
</div>
}

